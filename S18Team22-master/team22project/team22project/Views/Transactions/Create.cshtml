@model team22project.Models.Transaction

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Transaction</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })




    <div class="form-group">
        @Html.DisplayName("Is this purchase for a friend?")<br />
        <label class="radio">@Html.RadioButton("gift", true)Yes</label>
        <label class="radio">@Html.RadioButton("gift", false)No</label><br />
    </div>

    <div class="form-group">
        <label class="custom-control-label col-md-2">Select your seats:</label>
        <div class="col-md-10">
            @Html.ListBox("SelectedSeats", (MultiSelectList)ViewBag.AvailableSeats, new { @class = "form-control" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
