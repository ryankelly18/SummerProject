@model team22project.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Address:</dt>
        <dd>@Model.Address</dd>



        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
        {
            @Html.ActionLink("Change your password", "ChangePassword")
    }
            ]

        </dd>

        <dt>Change your details:</dt>
        <dd>
            [

            @Html.ActionLink("Change your details", "Edit")

            ]

        </dd>

        <dt>Store Credit Card:</dt>
        <dd>
            [

            @Html.ActionLink("Store your credit card info", "StoreCreditCard")

            ]

        </dd>

    </dl>

   
</div>
<hr />
