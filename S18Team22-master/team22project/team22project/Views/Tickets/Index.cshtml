@model IEnumerable<team22project.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Showing)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Showing)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TicketID }) |
            @Html.ActionLink("Details", "Details", new { id = item.TicketID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TicketID })
        </td>

        <p class="form-group">
            Select Seats @Html.ListBox("SelectedSeats", (MultiSelectList)ViewBag.AvailableSeats, new { @class = "form-control" })
            <br />
        </p>
    </tr>
}

</table>
